<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title - DEMO LAB</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" />
</head>
<body>
    <nav class="navbar navbar-inverse">
        <div class="container">
            <a class="navbar-brand" asp-controller="Home" asp-action="Index">DEMO LAB</a>
            <ul class="nav navbar-nav">
                <li><a asp-controller="Home" asp-action="Index">Trang chủ</a></li>
                <li><a asp-controller="Home" asp-action="About">Giới thiệu</a></li>
                <li><a asp-controller="Home" asp-action="Contact">Liên hệ</a></li>
                <li><a asp-controller="Product" asp-action="Index">Sản phẩm</a></li>
            </ul>
        </div>
    </nav>

    <div class="container">
        <div class="row">
            <div class="col-md-3">
                @Html.Partial("_CategoryPartial")
            </div>

            <div class="col-md-9">
                @RenderBody()

                @await Component.InvokeAsync("HotProduct")
            </div>
        </div>
    </div>

    <footer class="text-center" style="margin-top:20px; padding:20px; background:#eee;">
        <div class="row">
            <div class="col-md-6">
                <h4>GIỚI THIỆU</h4>
                <p>Trang web demo </p>
            </div>
            <div class="col-md-6">
                <h4>LIÊN HỆ</h4>
                <p>Email: MAI@gmail.com | Phone: 0123 456 789</p>
            </div>
        </div>
    </footer>

    <script src="https://code.jquery.com/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
